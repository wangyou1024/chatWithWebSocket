<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="talkViewModel"
            type="com.wangyou.chatwithwebsocket.data.TalkViewModel" />
        <variable
            name="personalViewModel"
            type="com.wangyou.chatwithwebsocket.data.PersonalViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_200"
        android:orientation="vertical"
        tools:context=".fragment.ChatFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_main"
            android:background="@color/blue_400"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/content_padding">

            <TextView
                android:id="@+id/chatUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_400"
                android:gravity="center"
                android:text="@string/name"
                android:textColor="@color/gray_200"
                android:textSize="@dimen/font_navigation" />
            <TextView
                android:id="@+id/backChat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/back"
                android:textColor="@color/gray_200"
                android:textSize="@dimen/font_navigation"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="@string/more_action"
                android:textColor="@color/gray_200"
                android:textSize="@dimen/font_more" />
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="@dimen/content_padding"
            app:chats="@{talkViewModel.chats}"
            app:personal="@{personalViewModel.personal}"
            app:users="@{talkViewModel.users}"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/content_padding">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/content_padding"
                android:layout_marginBottom="@dimen/content_padding"
                android:layout_weight="1"
                android:background="@color/gray_50"
                app:cardCornerRadius="20dp">
                <EditText
                    android:id="@+id/sendThing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="4dp"
                    android:background="@null"
                    android:lineSpacingMultiplier="1.6"
                    android:minHeight="28dp"
                    android:text="@={talkViewModel.draft}"
                    android:textColor="@color/gray_900"
                    android:textSize="@dimen/font_title"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp">
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="36dp"
                    android:background="@color/blue_400"
                    android:gravity="center"
                    android:onClick="@{()->talkViewModel.send(personalViewModel.personal)}"
                    android:text="@string/send"
                    android:textColor="@color/gray_200"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>
</layout>